<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
   
	
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    <style name="button_with_icon">
        <item name="android:background">@color/transparent</item>
        <item name="android:padding">5dp</item>
    </style>
    
     <style name="button_with_text">
        <item name="android:background">@drawable/list_selector_holo_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">5dp</item>
    </style>
    
     <style name="text_hint">
         <item name="android:textSize">18sp</item>
         <item name="android:textColor">@color/text_grey</item>
     </style>
    
    <style name="search_button">
        <item name="android:textSize">18sp</item>
        <item name="android:maxHeight">20dp</item>
    </style>
    
    <style name="box_with_title">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    
    <style name="title">
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="title_box">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    
    <style name="title_underline">
        <item name="android:background">@color/orange_pressed</item>
    </style>
    
    <style name="dialog_listview_item">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>
    
</resources>