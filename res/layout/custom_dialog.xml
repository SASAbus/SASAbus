<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_margin="15dp"
        android:text="Title..."
        android:textSize="23sp"
        android:textColor="@color/text_grey" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/orange_pressed" />
    
    <ScrollView
        android:id="@+id/scrollview_message"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">
	    <TextView
	        android:id="@+id/textview_message"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="15dp"
	        android:text="Message..."
	        android:textSize="@dimen/textsize_standard"
	        android:textColor="@android:color/black" />
    </ScrollView>
    
    <ListView
        android:id="@+id/listview_list"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:listSelector="@drawable/list_selector_holo_light">
    </ListView>
	    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_grey" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
	    <Button
	        android:id="@+id/button_negative"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="5"
	        style="@style/button_with_text"
	        android:text="Positive"
	        android:textSize=" 15sp" />
	    <Button
	        android:id="@+id/button_positive"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="5"
	        style="@style/button_with_text"
	        android:text="Negative"
	        android:textSize=" 15sp" />
    </LinearLayout>

</LinearLayout>