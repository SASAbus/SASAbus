<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp" >

    <RelativeLayout
        android:id="@+id/relativelayout_bus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageview_moving_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bus" />

        <TextView
            android:id="@+id/textview_time_departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageview_moving_type"
            android:layout_centerHorizontal="true"
            android:text="Line 6" />
        
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/relativelayout_bus"
        android:layout_marginLeft="10dp">
        
        <TextView
            android:id="@+id/textview_departure_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="16:48" />
        
        <TextView
            android:id="@+id/textview_departure_busstop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textview_departure_time"
            android:layout_marginLeft="5dp"
            android:textSize="20sp"
            android:text="Vadena - Birti" />
        
        <TextView
            android:id="@+id/textview_arrival_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_departure_time"
            android:layout_alignRight="@id/textview_departure_time"
            android:textSize="18sp"
            android:text="16:54" />
        
        <TextView
            android:id="@+id/textview_arrival_busstop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_departure_busstop"
            android:layout_alignLeft="@id/textview_departure_busstop"
            android:textSize="18sp"
            android:text="Laives - ZI" />
        
    </RelativeLayout>

</RelativeLayout>