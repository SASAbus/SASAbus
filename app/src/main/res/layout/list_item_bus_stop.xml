<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/list_fragment_station_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_margin_small"
        android:layout_marginLeft="@dimen/card_margin_small"
        android:layout_marginRight="@dimen/card_margin_small"
        android:layout_marginEnd="@dimen/card_margin_small"
        android:layout_marginStart="@dimen/card_margin_small"
        android:layout_marginBottom="@dimen/card_margin_small"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/card_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

            <TextView
                android:id="@+id/list_fragment_station_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:lines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/list_fragment_station_munic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/list_fragment_station_title"
                android:layout_toEndOf="@id/list_fragment_station_title"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:gravity="end"
                android:lines="1"
                android:ellipsize="end"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/list_fragment_station_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_secondary"
        android:visibility="gone"
        android:text="@string/station_nearby_text"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/card_margin"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        android:layout_marginEnd="@dimen/card_margin"
        android:layout_marginStart="@dimen/card_margin"
        android:layout_marginBottom="@dimen/card_margin"/>

    <View
        android:id="@+id/list_fragment_station_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_300"
        android:visibility="gone"
        android:layout_marginTop="@dimen/card_margin"
        android:layout_marginLeft="@dimen/card_margin_small"
        android:layout_marginRight="@dimen/card_margin_small"
        android:layout_marginEnd="@dimen/card_margin_small"
        android:layout_marginStart="@dimen/card_margin_small"
        android:layout_marginBottom="@dimen/card_margin"/>

</FrameLayout>