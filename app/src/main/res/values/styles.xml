    <style name="BaseStyle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:actionMenuTextColor">@color/text_primary</item>
        <item name="colorControlNormal">@color/color_control</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/text_secondary</item>
        <item name="android:textColorSecondary">@color/text_tertiary</item>
        <item name="android:textColorLink">@color/text_link</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/ActionMode</item>
        <item name="android:actionModeStyle">@style/ActionMode</item>

        <item name="android:windowBackground">@color/window_background</item>

        <item name="android:borderlessButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="colorButtonNormal">@color/color_button_normal</item>
    </style>

    <style name="Theme.Intro" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textColorLink">@color/white</item>
        <item name="android:textColor">@color/white</item>

        <item name="colorButtonNormal">@color/color_button_normal</item>
    </style>

    <style name="Theme.Base" parent="BaseStyle">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColorPrimary">@color/text_primary</item>
    </style>

    <style name="Theme.Normal" parent="BaseStyle">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Theme.About" parent="BaseStyle">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/material_indigo_500</item>
    </style>

    <style name="Theme.Settings" parent="BaseStyle">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Theme.BusStop" parent="BaseStyle">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/white</item>

        <item name="android:textColorPrimary">@color/text_primary</item>
    </style>

    <style name="Theme.PlannedTrips" parent="BaseStyle">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/white</item>

        <item name="android:textColorPrimary">@color/text_primary</item>
    </style>

    <style name="Theme.Indigo" parent="BaseStyle">
        <item name="colorPrimary">@color/material_indigo_500</item>
        <item name="colorPrimaryDark">@color/material_indigo_700</item>
        <item name="colorAccent">@color/material_amber_500</item>

        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Blue" parent="BaseStyle">
        <item name="colorPrimary">@color/material_blue_500</item>
        <item name="colorPrimaryDark">@color/material_blue_700</item>
        <item name="colorAccent">@color/material_amber_500</item>

        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Red" parent="BaseStyle">
        <item name="colorPrimary">@color/material_red_500</item>
        <item name="colorPrimaryDark">@color/material_red_700</item>
        <item name="colorAccent">@color/material_amber_500</item>

        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Green" parent="BaseStyle">
        <item name="colorPrimary">@color/material_green_500</item>
        <item name="colorPrimaryDark">@color/material_green_700</item>
        <item name="colorAccent">@color/material_amber_500</item>

        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Theme.Route" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:actionMenuTextColor">@color/text_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Theme.Parking" parent="BaseStyle">
        <item name="colorPrimary">@color/material_blue_500</item>
        <item name="colorPrimaryDark">@color/material_blue_700</item>
        <item name="colorAccent">@color/material_amber_500</item>
    </style>

    <style name="Theme.Bus" parent="BaseStyle">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColorPrimary">@color/text_primary</item>
    </style>

    <style name="Theme.Teal" parent="BaseStyle">
        <item name="colorPrimary">@color/material_teal_500</item>
        <item name="colorPrimaryDark">@color/material_teal_700</item>
        <item name="colorAccent">@color/material_red_500</item>

        <item name="android:textColorPrimary">@color/text_primary</item>

        <item name="colorButtonNormal">@color/material_teal_500</item>
    </style>

    <style name="Theme.Purple" parent="BaseStyle">
        <item name="colorPrimary">@color/material_purple_500</item>
        <item name="colorPrimaryDark">@color/material_purple_700</item>
        <item name="colorAccent">@color/material_amber_500</item>

        <item name="android:textColorPrimary">@color/text_primary</item>
    </style>

    <style name="Theme.Trips" parent="BaseStyle">
        <item name="colorPrimary">@color/material_blue_grey_500</item>
        <item name="colorPrimaryDark">@color/material_blue_grey_500</item>
        <item name="colorAccent">@color/material_amber_500</item>

        <item name="android:textColorPrimary">@color/text_primary</item>
    </style>

    <style name="Theme.EcoPoints.Login" parent="BaseStyle">
        <item name="colorPrimary">@color/material_blue_grey_700</item>
        <item name="colorPrimaryDark">@color/material_blue_grey_700</item>
        <item name="colorAccent">@color/material_pink_A200</item>

        <item name="android:textColorPrimary">@color/text_primary</item>
    </style>

    <style name="Theme.StationPicker" parent="BaseStyle">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/divider</item>
        <item name="colorAccent">@color/material_blue_grey_500</item>

        <item name="android:windowBackground">@color/black_300</item>

        <item name="android:textColorPrimary">@color/text_primary</item>
    </style>

    <style name="Theme.Event.Details" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_primary</item>

        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/window_background</item>

        <item name="colorButtonNormal">@drawable/button_color_state</item>
        <item name="android:buttonStyle">@style/AppButtonStyle</item>
    </style>

    <style name="Theme.Event.QrCode" parent="Theme.Event.Details">
        <item name="android:windowBackground">@color/qr_code_window_background</item>
    </style>


    <style name="ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="android:actionModeBackground">@color/material_indigo_500</item>
        <item name="actionModeBackground">@color/material_indigo_500</item>
        <item name="android:background">@color/material_indigo_500</item>
        <item name="background">@color/material_indigo_500</item>
    </style>

    <style name="CheckBox" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/material_indigo_500</item>
        <item name="android:actionMenuTextColor">@color/text_secondary</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textColorPrimary">@color/text_secondary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="colorControlNormal">@color/text_secondary</item>
    </style>

    <style name="SearchViewTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/app_body_text_1</item>
        <item name="colorControlNormal">@color/text_hint</item>
        <item name="colorControlActivated">@color/theme_accent_1</item>
    </style>

    <style name="Theme.Search" parent="BaseStyle">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="autoCompleteTextViewStyle">@style/Theme.Search.AutoCompleteTextView</item>
        <item name="searchViewStyle">@style/Theme.SearchView</item>
        <item name="colorControlNormal">@color/text_hint</item>
        <item name="colorControlActivated">@color/theme_accent_1</item>
    </style>

    <style name="Theme.Search.AutoCompleteTextView"
           parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textColor">@color/text_primary</item>

        <!-- If set to @null the cursor will be displayed using android:textColor -->
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="Theme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
        <item name="queryBackground">@null</item>
        <item name="submitBackground">@null</item>
    </style>

    <style name="ProgressBarHorizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_bar</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="ColorButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/material_blue_700</item>
    </style>

    <style name="TranslucentActivity" parent="AppTheme">
        <item name="android:windowBackground">@color/filter_scrim</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>

        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="Theme.WidgetActivity" parent="BaseStyle">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/material_indigo_500</item>
    </style>

    <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@drawable/button_text_state</item>
    </style>


    <!-- ===================================== TEXTAPPEARANCE ===================================-->

    <style name="TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp
        </item> <!-- bug in AppCompat, can remove this when it's fixed -->
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="EventDetailsSubtitle" parent="@style/Body1Text">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="EventDetailsTitle">
        <item name="android:textAppearance">@style/TextAppearance.Title</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingMultiplier">@dimen/h3_spacing</item>
    </style>

    <style name="Body1Text">
        <item name="android:textAppearance">@style/TextAppearance.Body1</item>
        <item name="android:lineSpacingMultiplier">@dimen/body_1_spacing</item>
    </style>


    <!-- ========================================= VARIOUS =====================================-->

    <style name="DialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_secondary</item>

        <item name="buttonStyle">@style/DialogButtonStyle</item>
        <item name="android:buttonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DatePickerStyle" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowBackground">@color/card_background</item>

        <item name="buttonStyle">@style/DialogButtonStyle</item>
        <item name="android:buttonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/material_teal_500</item>
    </style>


    <!-- ===================================== TEXTINPUTLAYOUT ==================================-->

    <style name="TextInputLayout" parent="Theme.About">
        <item name="colorPrimary">@color/material_teal_500</item>
        <item name="colorPrimaryDark">@color/material_teal_500</item>
        <item name="colorAccent">@color/material_teal_500</item>
        <item name="colorControlNormal">@color/material_teal_500</item>
    </style>

    <style name="TextInputLayout.Hint" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@color/material_teal_500</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextInputLayout.Grey" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorControlNormal">@color/text_hint</item>
        <item name="colorControlHighlight">@color/material_pink_A200</item>
        <item name="colorControlActivated">@color/material_pink_A200</item>
    </style>


    <!-- ======================================== TOOLBAR =======================================-->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="MenuOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:colorBackground">@color/window_background</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="ToolbarOverlayDark">
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="colorControlNormal">@color/text_primary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NavigationOverlay">
        <item name="android:textSize">14sp</item>
        <item name="colorPrimary">@color/default_icon_color_inverted</item>

        <item name="android:textColorSecondary">@color/icon_grey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarOverlay">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="CollapsingToolbar">
        <item name="android:textSize">24sp</item>
    </style>

</resources>