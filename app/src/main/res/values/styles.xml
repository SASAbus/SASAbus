<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light">
        <!-- Customize your theme here. -->
    </style>
    
    <style name="button_with_icon">
        <item name="android:background">@color/transparent</item>
        <item name="android:padding">5dp</item>
    </style>
    
     <style name="button_with_text">
        <item name="android:background">@drawable/list_selector_holo_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">5dp</item>
    </style>
    
     <style name="text_hint">
         <item name="android:textSize">18sp</item>
         <item name="android:textColor">@color/text_grey</item>
     </style>
    
    <style name="search_button">
        <item name="android:textSize">18sp</item>
        <item name="android:maxHeight">20dp</item>
    </style>
    
    <style name="box_with_title">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    
    <style name="title">
        <item name="android:textSize">18sp</item>
    </style>
    
     <style name="delay">
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
     <style name="delay_notification">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    
    <style name="title_box">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    
    <style name="title_underline">
        <item name="android:background">@color/orange_pressed</item>
    </style>
    
    <style name="dialog_listview_item">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

</resources>
